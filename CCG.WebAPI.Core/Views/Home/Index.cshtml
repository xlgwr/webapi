@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Base.cshtml";

    var rootUrl = Url.Content("~/");
    var baseUrl = Url.Action("About", "Home");
    var manageUrlChangePassword = Url.Action("ChangePassword", "Manage");
    var apiurldomain = Url.Action("getDomains", "api/domains");
}
<link href="~/Content/ligerUI/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
<link href="~/Content/ligerUI/skins/Gray2014/css/all.css" rel="stylesheet" />
<link href="~/Content/ligerUIme.css?t=20150608001" rel="stylesheet" />
@Scripts.Render("~/bundles/init")
@Scripts.Render("~/bundles/ch")
@Scripts.Render("~/bundles/auth")
<div class="ms-controller" ms-controller="indexvm">
    <div id="pageloading">
    </div>
    <div id="topmenu" class="l-topmenu">
        <div class="l-topmenu-logo">
            <span><strong>{{title.t1}}</strong> </span>
        </div>
        <div class="l-topmenu-welcome">
            <p>
                <strong>
                    Domain :
                    <span id="domain" class="text-info">{{user.domain}}</span>
                </strong>
                <strong>
                    User ID :
                    <span id="UserID" class="text-success">{{user.userid}}</span>
                </strong>
                <strong>
                    Name :
                    <span id="Name" class="text-success">{{user.username}}</span>
                </strong>
                <strong ms-class="{{user.dept==null?'hidden':''}}">
                    Dept :
                    <span id="Dept" class="text-info">{{user.dept}}</span>
                </strong>
                <strong>
                    Group :
                    <span id="Group" class="text-info">{{user.userrole.length>0?user.userrole[0]:''}}</span>
                    <a href="#" ms-click="onLogout('Logout',this)" class="btn btn-warning btn-xs text-danger" role="button">Log Out</a>
                </strong>
            </p>
        </div>
    </div>
    <div id="layout1" style="width: 99.6%; margin: 0 auto; margin-top: 4px;">
        <div position="left" ms-attr-title="{{title.t2}}" id="accordion1">
            <div ms-attr-title="{{title.t3}}">
                <div style="height: 7px;">
                </div>
                <a class="l-link" href="#" ms-click="addtab('auditMain', top.tclogin.title, '@manageUrlChangePassword?tfuserid='+top.users.userid)">{{language.tclogin.title}}</a>
                <a class="l-link" href="#" ms-click="addtab('about', 'about', '@baseUrl?tfuserid='+top.users.userid)">about</a>
            </div>
            <div ms-attr-title="{{title.t4}}">
                <div style="height: 7px;">
                </div>
                <a class="l-link" ms-visible="is_ADMIN" href="#" ms-click="addtab('adminMain', '管理中心', 'ConfigPages/adminMant.aspx?tfuserid='+top.users.userid)">管理中心</a>
            </div>
        </div>
        <div position="center" id="framecenter">
            <div tabid="home" ms-attr-title="{{title.t5}}" style="height: 300px">
                <iframe frameborder="0" name="home" id="home" src="~/home.html"></iframe>
            </div>
        </div>
    </div>
    <div style="height: 32px; line-height: 32px; text-align: center;">
        {{title.t6}}
    </div>
    <div style="display: none">
    </div>
</div>
@Scripts.Render("~/bundles/ligerUI")
@Scripts.Render("~/bundles/index")
